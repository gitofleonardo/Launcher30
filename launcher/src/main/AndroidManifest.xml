<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <application>
        <activity android:name=".BiometricProxyActivity"
            android:exported="true"
            android:excludeFromRecents="true"
            android:autoRemoveFromRecents="true"
            android:launchMode="singleInstance"
            android:theme="@style/BiometricProxyTheme">
            <intent-filter>
                <action android:name="com.hhvvg.launcher.BIOMETRIC_PROXY"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="activity" android:host="com.hhvvg.launcher" android:path="/biometricProxy"/>
            </intent-filter>
        </activity>
    </application>
</manifest>